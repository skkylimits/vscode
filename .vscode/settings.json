    //   },
    //   "editorTab": {
    //     "clipboard": true,
    //     "compare": true,
    //     "history": true,
    //     "remote": true
    //   },
    //   "explorer": {
    //     "clipboard": true,
    //     "compare": true,
    //     "history": true,
    //     "remote": true
    //   },
    //   "scm": {
    //     "authors": true
    //   },
    //   "scmGroup": {
    //     "compare": true,
    //     "openClose": true,
    //     "stash": true
    //   },
    //   "scmGroupInline": {
    //     "stash": true
    //   },
    //   "scmItem": {
    //     "clipboard": true,
    //     "compare": true,
